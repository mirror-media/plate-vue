<section class="story-relateds">
  <% if (!_.isEmpty(storyRelateds)) { %>
    <h1 class="story-relateds__title">相關文章</h1>
    <% storyRelateds.forEach(function (related, index) { %>
      <a class="story-relateds__story-title" href="https://www.mirrormedia.mg/story/<%= _.get(related, 'slug', '') %>" target="_blank"><%= _.get(related, 'title', '') %></a>
      <% if (showAMPAds && index === AMPAds.DFPUnits['AMPE1'].showAfterRelatedPost - 1) { %>
        <%- include('./AppAds', { AMPAds, pos: 'AMPE1' }) %>
      <% } %>
    <% }) %>
  <% } %>
</section>