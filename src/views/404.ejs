        -ms-transform: translate(-50%, -50%);
        transform: translate(-50%, -50%);
      }
      .notFound__img--textBox h1 {
        margin: 0;
        color: #f89228;
        font-size: 45px;
        font-family: 'PT Mono', monospace, -apple-system, "Helvetica Neue", sans-serif;
        font-weight: normal;
      }
      .notFound__img--textBox h2 {
        color: #f89228;
        font-size: 1.2rem;
      }
      .notFound__img--textBox a {
        margin: 0;
        color: #fff;
        font-size: 1.2rem;
        font-weight: 300;
      }
      .notFound__popList {
        padding: 0 5%;
      }
      .notFound__popList h2 {
        color: #fff;
        font-size: 1.2rem
      }
      .notFound-popListContainer {
        display: -webkit-box;
        display: -webkit-flex;
        display: -ms-flexbox;
        display: flex;
        -webkit-box-orient: vertical;
        -webkit-box-direction: normal;
        -webkit-flex-direction: column;
        -ms-flex-direction: column;
        flex-direction: column;
      }
      .notFound-popListContainer__post {
        width: 100%;
        margin-bottom: 1em;
      }
      .notFound-popListContainer__post--img {
        position: relative;
        width: 100%;
        padding-top: 56.25%;
        margin: 0;
      }
      .notFound-popListContainer__post--img img {
        position: absolute;
        top: 0;
        left: 0;
        bottom: 0;
        right: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
        object-position: 50% 50%;
      }
      .notFound-popListContainer__post--category {
        position: absolute;
        left: 0;
        bottom: 0;
        padding: 0.5em;
        color: #fff;
        letter-spacing: 2px;
        background-color: #bcbcbc;
      }
      .notFound-popListContainer__post--category.news-people {
        background-color: #30bac8;
      }
      .notFound-popListContainer__post--category.entertainment {
        background-color: #bf3284;
      }
      .notFound-popListContainer__post--category.foodtravel {
        background-color: #eac151;
      }
      .notFound-popListContainer__post--category.watch {
        background-color: #c1d16e;
      }
      .notFound-popListContainer__post--category.projects {
        background-color: #000;
      }
      .notFound-popListContainer__post--title {
        background-color: #fff;
        padding: 1em;
      }
      .notFound-popListContainer__post--title a {
        font-size: 1.2rem;
        font-weight: 300;
        text-align: justify;
        line-height: 1.2;
        letter-spacing: 1px;
      }
      @media (min-width: 600px) {
        br {
          display: none;
        }
        h1, h2, a {
          margin: 0 1em;
        }
        .notFound-view {
          justify-content: flex-start;
          width: 100vw;
          height: 100vh;
        }
        .notFound__img {
          position: relative;
          margin: 20% 0 2em;
        }
        .notFound__img--mobile {
          display: none;
        }
        .notFound__img--desktop {
          display: inline;
        }
        .notFound__img--textBox {
          align-items: flex-end;
          flex-direction: row;
          top: 50%;
          left: 0;
          transform: translateY(-50%);
          width: 100%;
          padding-left: 5%;
        }
        .notFound__img--textBox h1 {
          font-size: 60px;
        }
        .notFound__img--textBox h2, a {
          font-size: 1.2rem;
          padding-bottom: 13px;
        }
        .notFound__popList {
          display: flex;
          flex-direction: column;
          justify-content: center;
        }
        .notFound__popList h2 {
          margin: 1em 0 1em 10px;
        }
        .notFound-popListContainer {
          flex-direction: row;
        }
        .notFound-popListContainer__post {
          margin: 0 10px;
          background-color: #fff;
        }
      }
      @media (min-width: 900px) {
        .notFound-view {
          justify-content: center;
        }
        .notFound__img {
          margin: 2em 0;
        }
        .notFound__img--textBox {
          width: 75%;
          padding: 0;
          left: 12.5%;
        }
        .notFound__img--textBox h1 {
          font-size: 70px;
        }
        .notFound__img--textBox h2, a {
          padding-bottom: 15px;
          font-size: 30px;
        }
        .notFound__img--textBox h2 {
          margin: 0 1.5em;
        }
        .notFound__popList {
          width: 75%;
          margin: 0 auto;
          padding: 0;
        }
        .notFound__popList h2 {
          margin: 1em 0;
        }
        .notFound-popListContainer {
          justify-content: space-between;
        }
        .notFound-popListContainer__post {
          width: 30%;
          margin: 0;
        }
      }
      @media (min-width: 1200px) {
        .notFound__img--textBox h1 {
          font-size: 80px;
        }
        .notFound__img--textBox h2, a {
          font-size: 40px;
        }
        .notFound__img--textBox h2 {
          margin: 0 2em;
        }
      }
